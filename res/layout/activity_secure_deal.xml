<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DealSummaryActivity" >

    <ImageView
        android:id="@+id/secure_deal_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/secure_deal_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/secure_deal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_gravity="center_horizontal"
        android:text="@string/secure_deal"/>

    <TextView
        android:id="@+id/secure_deal_remaining"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="5dp"
        android:layout_weight="0.7"
        android:clickable="false"
        android:gravity="right|bottom"
        android:maxLines="1"
        android:text="Qty / Time remaining"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#770000"
        android:textIsSelectable="false" />

</LinearLayout>