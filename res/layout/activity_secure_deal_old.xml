<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DealSummaryActivity"
    android:background="#25b89b" >

      <TextView
        android:id="@+id/deal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deal_heading"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="Secure Deal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="22sp" />
    
    <LinearLayout
        android:id="@+id/deals_fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >
    </LinearLayout>
   
    <Button
        android:id="@+id/secure_deal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/secure_deal" />
 
</LinearLayout>