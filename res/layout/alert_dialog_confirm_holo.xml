<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/dialog_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:gravity="left"
        android:scaleType="center" />

    <View
        android:id="@+id/buttonPanelTopDivider"
        android:layout_below="@+id/dialog_header" />

    <TextView
        android:id="@+id/dialog_body_message"
        android:layout_below="@+id/buttonPanelTopDivider"
        android:layout_gravity="left"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="6dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/dialog_confirm_row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_body_message"
        android:layout_marginTop="6dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_confirm_row1_label"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="3dp" />

        <TextView
            android:id="@+id/dialog_confirm_row1_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="3dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_confirm_row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_confirm_row1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_confirm_row2_label"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="3dp" />

        <TextView
            android:id="@+id/dialog_confirm_row2_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="3dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_confirm_row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_confirm_row2"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_confirm_row3_label"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="3dp" />

        <TextView
            android:id="@+id/dialog_confirm_row3_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="3dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_confirm_row4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_confirm_row3"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_confirm_row4_label"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="3dp" />

        <TextView
            android:id="@+id/dialog_confirm_row4_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="3dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_confirm_row5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_confirm_row4"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_confirm_row5_label"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="3dp" />

        <TextView
            android:id="@+id/dialog_confirm_row5_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="3dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_confirm_message"
        android:layout_below="@+id/dialog_confirm_row5"
        android:layout_gravity="left"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="6dp"
        android:visibility="gone" />

    <View
        android:id="@+id/buttonPanelBottomDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/dialog_confirm_message"
        android:background="?android:listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonPanelBottomDivider"
        android:measureWithLargestChild="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:maxLines="2"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:maxLines="2"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:maxLines="2"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>